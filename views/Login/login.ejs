<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <!-- Tell the browser to be responsive to screen width -->
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">
    <!-- Favicon icon -->
    <link rel="icon" type="image/png" sizes="32x32" href="/images/logo_main.png">
    <title><%= title %></title>
    <!-- Bootstrap Core CSS -->
    <link href="/plugins/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <!-- Custom CSS -->
    <link href="/stylesheets/css/style.css" rel="stylesheet">
    <!-- You can change the theme colors from here -->
    <link href="/stylesheets/css/colors/blue.css" id="theme" rel="stylesheet">
    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
</head>

<body>
<!-- ============================================================== -->
<!-- Preloader - style you can find in spinners.css -->
<!-- ============================================================== -->
<div class="preloader">
    <svg class="circular" viewBox="25 25 50 50">
        <circle class="path" cx="50" cy="50" r="20" fill="none" stroke-width="2" stroke-miterlimit="10" /> </svg>
</div>
<!-- ============================================================== -->
<!-- Main wrapper - style you can find in pages.scss -->
<!-- ============================================================== -->
<section id="wrapper" class="login-register login-sidebar" style="background-image:url(/images/background/background7.jpg);">
    <div class="login-box card">
        <div class="card-body">
            <!---Start Form-->
            <form class="form-horizontal form-material" id="loginform" action="/signIn" method="post">
                <a href="javascript:void(0)" class="text-center db"><img src="/images/logo_main.png" alt="Home" style="width:250px; margin-top: 220px; margin-bottom: 100px;" /></a>
                <!---Email Box start-->
                <div class="form-group">
                    <div class="col-xs-12">
                        <input class="form-control" id="txt_email" name="txt_email" required type="text" placeholder="Email">
                    </div>
                </div>
                <!------Email End-->
                <!---Password Start-->
                <div class="form-group">
                    <div class="col-xs-12">
                        <input class="form-control" type="password" id="txt_password" name="txt_password" placeholder="Password">
                    </div>
                </div>
                <!---Password End-->
                <!--Forget Password-->
                <div class="form-group">
                    <div class="col-md-12">
                        <div class="checkbox checkbox-primary pull-left p-t-0"></div>
                        <a href="javascript:void(0)" id="to-recover" class="text-dark pull-right"><i class="fa fa-lock m-r-5"></i> Forgot pwd?</a> 
                    </div>
                </div>
                <!---Submit Button-->
                <div class="form-group text-center m-t-20">
                    <div class="col-xs-12">
                        <button class=" btn-info btn-lg btn-block text-uppercase waves-effect waves-light" type="submit">Log In</button>
                    </div>
                </div>
                <!--End Submit Button-->
                <!---Alert Text Start-->
                <div class="row">
                    <div class="col-xs-12 col-sm-12 col-md-12 m-t-10 text-center">
                        <h4 class="text-danger"><%= data %></h4>
                    </div>
                </div>
                <!---End Alert TExt -->
            </form>
            <!----End of Login Form---->

            <!---Start of Recovery Email -->
            <form class="form-horizontal" method="post" id="recoverform" action="forgetPassword">
                <div class="form-group ">
                    <div class="col-xs-12">
                        <h3>Recover Password</h3>
                        <p class="text-muted">Enter your Email and instructions will be sent to you! </p>
                    </div>
                </div>
                <div class="form-group ">
                    <div class="col-xs-12">
                        <input class="form-control" id="txt_email" name="txt_email" type="text" required="" placeholder="Email">
                    </div>
                </div>
                <div class="form-group text-center m-t-20">
                    <div class="col-xs-12">
                        <button class="btn btn-primary btn-lg btn-block text-uppercase waves-effect waves-light" type="submit">Reset</button>
                    </div>
                </div>
            </form>
            <!----End of Recovery Form---->
        </div>
    </div>
</section>
<!-- ============================================================== -->
<!-- End Wrapper -->
<!-- ============================================================== -->
<!-- ============================================================== -->
<!-- All Jquery -->
<!-- ============================================================== -->
<script src="/plugins/jquery/jquery.min.js"></script>
<!-- Bootstrap tether Core JavaScript -->
<script src="/plugins/bootstrap/js/popper.min.js"></script>
<script src="/plugins/bootstrap/js/bootstrap.min.js"></script>
<!-- slimscrollbar scrollbar JavaScript -->
<script src="/javascripts/jquery.slimscroll.js"></script>
<!--Wave Effects -->
<script src="/javascripts/waves.js"></script>
<!--Menu sidebar -->
<script src="/javascripts/sidebarmenu.js"></script>
<!--stickey kit -->
<script src="/plugins/sticky-kit-master/dist/sticky-kit.min.js"></script>
<script src="/plugins/sparkline/jquery.sparkline.min.js"></script>
<!--Custom JavaScript -->
<script src="/javascripts/custom.min.js"></script>
<!-- ============================================================== -->
<!-- Style switcher -->
<!-- ============================================================== -->
<script src="/plugins/styleswitcher/jQuery.style.switcher.js"></script>

<script src="/plugins/validationengine/languages/jquery.validationEngine-en.js"></script>
<script src="/plugins/validationengine/jquery.validationEngine.js"></script>
<script src="/plugins/jquery-validation/jquery.validate.js"></script>

<!-- Validation of Login Form & Recovery Email form -->
<script>
    $( document ).ready(function() {
        $("#loginform").validate({
            ignore: [],
            rules: {
                txt_email: {
                    required : true,
                    email : true
                },
                txt_password: {
                    required : true
                }
            },
            messages: {
                txt_email: {
                    required : "Enter an email address",
                    email : "Enter an valid email address"
                },
                txt_password: "Enter your password"

            }, highlight: function(element) {
                $(element).addClass('error');
            }, unhighlight: function(element) {
                $(element).removeClass('error');
            }
        });


        $("#recoverform").validate({
            ignore: [],
            rules: {
                txt_email: {
                    required : true,
                    email : true
                }
            },
            messages: {
                txt_email: {
                    required : "Enter an email address",
                    email : "Enter an valid email address"
                }

            }, highlight: function(element) {
                $(element).addClass('error');
            }, unhighlight: function(element) {
                $(element).removeClass('error');
            }
        });
    });
</script>

</body>

</html>