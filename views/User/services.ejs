    <!-- Row -->

    <!-- Row -->
    <div id="div_add">
        <div class="row">
            <div class="col-lg-12">
                <div class="card card-outline-info">
                    <div class="card-header">
                        <h4 class="m-b-0 text-white">Create Services form</h4>
                    </div>
                    <div class="card-body">
                        <form id="form_insert" name="form_insert" enctype="multipart/form-data" role="form"
                            method="POST" class="form-horizontal">
                            <div class="form-body">
                                <h3 class="box-title">Services information</h3>
